  <hidden>true</hidden>
  <content>{{velocity output="false"}}
$xwiki.jsx.use('XWiki.BlockingAuth.AdminBlockingAuthSheet')
$xwiki.ssx.use('XWiki.BlockingAuth.AdminBlockingAuthSheet')
{{/velocity}}{{velocity}}= $services.localization.render('blockingauth.admin.heading') =

#macro(displayFailure $msg)
  #set($exception = $services.blockingauth.getError())
  #if($exception == $NULL)
    {{error}} $services.rendering.escape($msg, $doc.getSyntax()) {{/error}}
  #else
    #displayException($msg $exception)
  #end

#end
#macro(showUser $userRef)
#if($xwiki.exists($userRef)) [[$services.rendering.escape($services.model.serialize($userRef), $doc.getSyntax())]] #else $services.rendering.escape($userRef.getName(), $doc.getSyntax()) #end
#end
##
## end macros
##
#if(!$services.blockingauth)
{{error}}
$services.localization.render('blockingauth.missingService')
{{/error}}

#end
#if(!$services.blockingauth.blockingAuthenticator)
{{error}}
$services.localization.render('blockingauth.authNotConfigured')
{{/error}}

#end
{{/velocity}}

{{velocity wiki="true"}}
== $services.localization.render('blockingauth.admin.events.subheading') ==

#set($action = "$!request.getParameter('action')")
#if($action == "unblockUser")
  #set($user = $request.getParameter('user'))
  #set($result = $services.blockingauth.unblockUser($user))
  #if($result)
    {{info}} $services.rendering.escape( $services.localization.render('blockingauth.admin.events.users.unblock.success', [ $user ] ), $doc.getSyntax() ) {{/info}}
  #else
    #displayFailure( $services.localization.render('blockingauth.admin.events.users.unblock.error', [ $user ] ) )
  #end
#end

#set($blockedUserInfo = $services.blockingauth.getBlockedUsers())
#if($blockedUserInfo == $NULL)
  #displayFailure($services.localization.render('blockingauth.admin.events.users.error'))
#else
 #if($blockedUserInfo.isEmpty())
   $services.localization.render('blockingauth.admin.events.users.empty')
 #else
   |= $services.localization.render('blockingauth.admin.events.users.table.user') |= $services.localization.render('blockingauth.admin.events.users.table.date') |= $services.localization.render('blockingauth.admin.events.users.table.actions')
   #foreach($userInfo in $blockedUserInfo)
   | #showUser($userInfo.getUserReference()) | $datetool.format($userInfo.getLastAttempt()) | [[Unblock&gt;&gt;||queryString="editor=globaladmin&amp;section=blockingauth&amp;action=unblockUser&amp;user=$escapetool.url($userInfo.getUserReference().getName())]]
   #end
 #end
#end

##
## same same with IPs
##

#set($action = "$!request.getParameter('action')")
#if($action == "unblockIP")
  #set($ip = $request.getParameter('ip'))
  #set($result = $services.blockingauth.unblockIP($ip))
  #if($result)
    {{info}} $services.rendering.escape( $services.localization.render('blockingauth.admin.events.ips.unblock.success', [ $ip ] ), $doc.getSyntax() ) {{/info}}
  #else
    #displayFailure( $services.localization.render('blockingauth.admin.events.ips.unblock.error', [ $ip ] ) )
  #end
#end

#set($blockedIpInfo = $services.blockingauth.getBlockedIPs())
#if($blockedIpInfo == $NULL)
  #displayFailure($services.localization.render('blockingauth.admin.events.ips.error'))
#else
 #if($blockedIpInfo.isEmpty())
   $services.localization.render('blockingauth.admin.events.ips.empty')
 #else
   |= $services.localization.render('blockingauth.admin.events.ips.table.ip') |= $services.localization.render('blockingauth.admin.events.ips.table.date') |= $services.localization.render('blockingauth.admin.events.ips.table.actions')
   #foreach($ipInfo in $blockedIpInfo)
   | $ipInfo.getIp() | $datetool.format($ipInfo.getLastAttempt()) | [[Unblock&gt;&gt;||queryString="editor=globaladmin&amp;section=blockingauth&amp;action=unblockIP&amp;ip=$escapetool.url($ipInfo.getIp())]]
   #end
 #end
#end

{{/velocity}}

== {{velocity}}$services.localization.render('blockingauth.admin.config.subheading'){{/velocity}} ==

{{velocity}}
#if($action == "createConfig")
  #set($discard = $services.blockingauth.createLocalConfig())
#end

#if($services.blockingauth.hasLocalConfig())
#set ($params = {
  'settings': ['maxUserAttempts', 'userBlockTime', 'maxIPAttempts', 'ipBlockTime', 'ipWhitelist', 'trustedProxies']
})
#set ($paramDoc = $xwiki.getDocument("XWiki.BlockingAuth.Config"))
#set ($paramClass = "XWiki.BlockingAuth.ConfigClass")

{{include reference="XWiki.AdminFieldsDisplaySheet"/}}

$services.rendering.escape( $services.localization.render('blockingauth.admin.config.ipnote', [$services.blockingauth.getCurrentIP()] ), $doc.getSyntax() )
#else

$services.localization.render('blockingauth.admin.config.noconfig.description')

(% class="buttonwrapper" %)(((
(% class="button" %)
[[$services.localization.render('blockingauth.admin.config.create.button')&gt;&gt;||queryString="editor=globaladmin&amp;section=blockingauth&amp;action=createConfig"]]
)))
#end
{{/velocity}}
